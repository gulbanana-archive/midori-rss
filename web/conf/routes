# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# HTML Website
GET     /                           @controllers.Web.index
GET     /more/:start                @controllers.Web.more(start: Int)

# JSON API
#POST     /api/entries             @controllers.API.fromDate
#POST     /api/entries             @controllers.API.fromDate

# Test stuff
GET     /test/create                @controllers.Test.create
GET     /test/delete                @controllers.Test.delete
GET     /test/reset                 @controllers.Test.reset

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
